<style>
    @import url('//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css');

    .isa_info,
    .isa_success,
    .isa_warning,
    .isa_error {
        margin: 30px 0px 10px 0px;
        padding: 20px;

    }

    .isa_info {
        color: #00529B;
        background-color: #BDE5F8;
    }

    .isa_success {
        color: #4F8A10;
        background-color: #DFF2BF;
    }

    .isa_warning {
        color: #9F6000;
        background-color: #FEEFB3;
    }

    .isa_error {
        color: #D8000C;
        background-color: #FFD2D2;
    }

    .isa_info i,
    .isa_success i,
    .isa_warning i,
    .isa_error i {
        margin: 10px 0px 10px 0px;
        font-size: 2.5em;
        vertical-align: middle;
    }
</style>
<div class="isa_info">
    <i class="fa fa-info-circle" style="float: left;"></i>
    {% assign order = checkout.order %}
    <div style="margin-left: 60px;">
        <p style="font-size: 14px;;margin-bottom: 6px;"> Please check your email <span style="font-weight: 500;">{{ checkout.email }}</span> We sent you the instructions on how to access {{ order.line_items[0].product.title }} hosted <a style="text-decoration: underline;" href={{ order.line_items[0].product.tags[0] }} target="_blank">here.</a></p>
        <p style="font-size: 14px;;margin-bottom: 6px;">If this is your first time on <a style="text-decoration: underline;" href={{ order.line_items[0].product.tags[0] }} target="_blank">{{ order.line_items[0].product.tags[0] }}</a> you should receive password reset instruction in your email.</p>
        <p style="font-size: 14px;;margin-bottom: 6px;">You can <a style="text-decoration: underline;" href="{{ order.line_items[0].product.tags[0] }}/login" target="_blank">login</a> using:</p>
        <ul style="list-style-type:disc;margin-left: 25px;font-size: 14px;line-height: 1.4em;">
            <li style=""><span style="font-weight: 500;">{{ checkout.email }}</span> as your username </li>
            <li style=""> The password you chose during the password reset </li>
        </ul>
    </div>
</div>
